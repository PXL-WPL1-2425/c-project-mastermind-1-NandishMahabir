<Window x:Class="Mastermind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mastermind"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox Name="Color1" FontSize="18" Margin="5 25"/>
        <ComboBox Name="Color2" FontSize="18" Margin="5 25" Grid.Row="1"/>
        <ComboBox Name="Color3" FontSize="18" Margin="5 25" Grid.Row="2"/>
        <ComboBox Name="Color4" FontSize="18" Margin="5 25" Grid.Row="3"/>
        <Button Name="BtnValidateCode" Content="Check Code" FontSize="20" Grid.Column="1" Grid.Row="4" Margin="75 25" Click="BtnValidateCode_Click" />
    </Grid>
</Window>
